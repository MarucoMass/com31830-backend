doctype 5
html(lang="es")
head
    title Desafio 5 - PUG
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
body
    h1.fs-1.ms-3 Example App: Home
        div.container.mx-auto.p-3.mt-3.bg-secondary.text-light
            h2.m-2 Add product
            div.m-4
                form(method="post" action="/productos")
                    div.mb-3
                        label.form-label(for="title")
                            i.fs-5  Title
                        input(type="text" class="form-control" id="title" name="title")
                    div.mb-3
                        label.form-label(for="price")
                            i.fs-5 Price 
                        div.input-group
                            span.input-group-text $
                            input(type="number" min="0" step="0.01" class="form-control" id="price" name="price")
                    div.mb-3
                        label.form-label(for="thumbnail")
                            i.fs-5 URL Thumbnail  
                        input(type="text" class="form-control" id="thumbnail" name="thumbnail")
                    button.btn.btn-success.mt-3(type="submit") 
                        strong Send 
                div
                    a(href="/productos")
                        button.btn.btn-primary 
                            strong Product List
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")